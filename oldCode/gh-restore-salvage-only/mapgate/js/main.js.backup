// Load selected ShapeForge object into editor
function loadShapeForgeObject(data, filename) {
    console.log(`üîÑ Loading ${filename} into editor...`);
    
    try {
        // Set as current object
        currentObject = data;
        
        // Update UI
        document.querySelector('#object-name').value = data.name || filename.replace('.shapeforge.json', '');
        
        // Update editor display
        if (window.editor3D) {
            window.editor3D.loadObject(data);
        }
        
        // Update viewer
        if (window.scene3D) {
            window.scene3D.loadShapeForgeObject(data);
        }
        
        console.log(`‚úÖ Successfully loaded ${filename} into editor`);
        
    } catch (error) {
        console.error(`‚ùå Failed to load ${filename}:`, error);
        alert(`Failed to load ${filename}: ${error.message}`);
    }
}

